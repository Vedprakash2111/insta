<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

  <FrameLayout
      android:id="@+id/fragment_container"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_above="@id/bottom_nev"
      >

  </FrameLayout>

  <com.google.android.material.card.MaterialCardView
      android:id="@+id/bottom_nev"
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:layout_alignParentBottom="true">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerInParent="true">
  <ImageView
      android:id="@+id/home"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:layout_marginStart="10dp"
      android:src="@drawable/home_outline"
      android:layout_centerVertical="true"/>
  <ImageView
      android:id="@+id/search"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:layout_marginStart="20dp"
      android:src="@drawable/search_outline"
      android:layout_toEndOf="@id/home"
      android:layout_centerVertical="true"/>
  <ImageView
      android:id="@+id/post"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:layout_marginStart="20dp"
      android:src="@drawable/add_outline"
      android:layout_toEndOf="@id/search"
      android:layout_centerVertical="true"/>


  <ImageView
      android:id="@+id/like"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:layout_marginStart="20dp"
      android:src="@drawable/heart_outline"
      android:layout_toEndOf="@id/post"
      android:layout_centerVertical="true"/>
  <ImageView
      android:id="@+id/profile"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:layout_marginStart="20dp"
      android:src="@drawable/profile_outline"
      android:layout_toEndOf="@id/like"
      android:layout_centerVertical="true"/>

  </RelativeLayout>

</RelativeLayout>

  </com.google.android.material.card.MaterialCardView>
</RelativeLayout>